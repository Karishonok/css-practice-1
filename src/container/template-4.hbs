<header class="header">
	<div class="">
		{{> logo}}
	</div>

	<nav class="header_nav">
		<div class="header_nav-right">
			{{>nav list=header}}
		</div>
	</nav>
</header>

{{#with main}}
<div class="main">
	<div class="main_content">
		<h1 class="main_heading">{{heading}}</h1>
		<p class="main_description">{{description}}</p>
		<a href="{{href}}" class="button main_button">{{button}}</a>
	</div>
	<img src="{{image}}" alt="Main image" class="main_image">
</div>
{{/with}}

<div class="featured">
	{{#each featured}}
	<div class="card">
		<img src="{{photo}}" alt="Card photo" class="card_photo">
		<h2 class="card_heading">{{heading}}</h2>
		<p class="card_info">{{info}}</p>
		<a class="card_link" href="{{linkUrl}}">{{linkText}}</a>
	</div>
	{{/each}}
</div>

<div class="actions">
	{{#each actions}}
	<div class="actions_content">
		<h3 class="actions_heading">{{heading}}</h3>
		<a href="{{url}}" class="button actions_url">{{text}}</a>
	</div>
	{{/each}}
</div>

<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title ">{{title}}</span>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>