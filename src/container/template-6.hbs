<header class="header">
	<a href="#test">
		{{> logo}}
	</a>

	<nav class="header_nav">
		<div class="header_nav-right">
			{{>nav list=header}}
		</div>
	</nav>
</header>
<div class="hero">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_description">{{description}}</p>
	</div>
	{{/with}}
	{{#with form}}
	<form class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form-input-{{id}}" />
			{{/each}}
		</div>
		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>
		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</div>

<div class="updates">
	{{#with updates}}
	<div class="updates_list">
		<h3 class="updates_title">{{title}}</h3>
		{{#each list}}
		<div class="list_box">
			<span></span>
		</div>
		<div class="list_info">
			<h4 class="list_nickname">@{{nickname}}</h4>
			<p class="list_description">{{description}}</p>
		</div>
		{{/each}}
		{{#with show_all}}
		<a href="{{url}}" class="show_all_link">{{text}}</a>
		{{/with}}
	</div>
	{{/with}}
</div>

<div class="expirience">
	{{#with expirience}}
	<div class="expirience_header">
		<h2 class="expirience_title">{{title}}</h2>
		<button class="expirience_badge">{{badge}}</button>
	</div>
	{{#each list}}
	<div class="expirience_list">
		<strong>{{name}}</strong>
		<p>{{details}}</p>
	</div>
	{{/each}}
	{{/with}}
</div>


<footer class="footer" id="test">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title ">{{title}}</span>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>